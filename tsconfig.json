{
  "compilerOptions": {  //settings for the TypeScript compiler

    "target": "ES2020", //specifies the ECMAScript target version

    "module": "commonjs", //specifies the module code generation

    "rootDir": "./src", //specifies the root directory of input files

    "outDir": "./dist", //specifies the output directory for compiled files

    "strict": true, //enables all strict type-checking options

    "esModuleInterop": true, // enables emit interoperability between CommonJS and ES Modules

    "skipLibCheck": true, // skips type checking of declaration files

    "forceConsistentCasingInFileNames": true, //disallows inconsistently-cased references to the same file

    "noImplicitAny": true, //raises error on expressions and declarations with an implied 'any' type

    "moduleResolution": "node", //specifies how modules are resolved

    "resolveJsonModule": true, //allows importing .json files

    "allowJs": true, //allows JavaScript files to be compiled
    
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}